{
	"name": "setup-biome",
	"description": "Setup the Biome CLI in GitHub Actions",
	"scripts": {
		"build": "unbuild",
		"prepackage": "npm run build",
		"package": "ncc build build/index.mjs -o dist",
		"check": "biome check . --apply",
		"ci": "biome ci .",
		"postinstall": "lefthook install"
	},
	"keywords": ["biome", "biomejs", "cli", "github-action"],
	"author": {
		"name": "Nicolas Hedger",
		"email": "nicolas@hedger.ch"
	},
	"license": "MIT",
	"dependencies": {
		"@actions/core": "^1.10.1",
		"@actions/tool-cache": "^2.0.1",
		"@octokit/auth-action": "^5.1.0",
		"@octokit/request-error": "^6.1.0",
		"@octokit/rest": "^20.1.0",
		"semver": "^7.6.0",
		"ts-dedent": "^2.2.0",
		"yaml": "^2.4.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.6.4",
		"@octokit/types": "^12.6.0",
		"@types/node": "^16.18.93",
		"@types/semver": "^7.5.8",
		"@vercel/ncc": "^0.38.1",
		"lefthook": "^1.6.8",
		"typescript": "^5.4.4",
		"unbuild": "^2.0.0"
	},
	"packageManager": "pnpm@8.3.1"
}
