{
	"name": "setup-biome",
	"description": "Setup the Biome CLI in GitHub Actions",
	"module": "src/index.ts",
	"type": "module",
	"scripts": {
		"tag": "bun run scripts/tag-github-action.ts",
		"build": "bun build . --outfile dist/index.mjs --target node --minify",
		"check": "biome check --write",
		"typecheck": "tsc --noEmit",
		"ci": "biome ci"
	},
	"keywords": ["biome", "biomejs", "cli", "github-action"],
	"author": {
		"name": "Nicolas Hedger",
		"email": "nicolas@hedger.ch"
	},
	"license": "MIT",
	"dependencies": {
		"@actions/core": "1.11.1",
		"@actions/tool-cache": "2.0.2",
		"@octokit/auth-action": "5.1.2",
		"@octokit/request-error": "6.1.8",
		"@octokit/rest": "21.1.1",
		"semver": "7.7.1",
		"ts-dedent": "2.2.0",
		"yaml": "2.7.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@octokit/types": "14.0.0",
		"@types/bun": "1.2.9",
		"@types/semver": "7.7.0",
		"lefthook": "1.11.9",
		"typescript": "5.8.3"
	},
	"packageManager": "bun@1.2.10",
	"trustedDependencies": ["@biomejs/biome", "lefthook"]
}
